@model tl2_tp6_2024_ElZorroAs.Models.Productos

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>
<p>¿Estás seguro de que deseas eliminar el siguiente producto?</p>

<div>
    <h4>Producto</h4>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.IdProducto</dd>
        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Precio:</dt>
        <dd class="col-sm-10">$@Model.Precio</dd>
    </dl>
</div>

<form asp-action="ConfirmarEliminarProducto" method="post">
    <input type="hidden" name="id" value="@Model.IdProducto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("ListarProductos", "Producto")" class="btn btn-secondary">Cancelar</a>
</form>