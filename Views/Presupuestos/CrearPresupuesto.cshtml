@model tl2_tp6_2024_ElZorroAs.Models.Presupuestos

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="nombreDestinatario">Nombre del Destinatario</label>
        <input type="text" class="form-control" id="nombreDestinatario" name="nombreDestinatario" required />
    </div>

    <div class="form-group">
        <label for="fechaCreacion">Fecha de Creaci√≥n</label>
        <input type="text" class="form-control" id="fechaCreacion" name="fechaCreacion" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
</form>
